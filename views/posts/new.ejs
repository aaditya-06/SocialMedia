<% layout("Layouts/Boilerplate") %>

<div style="background-color: #000; min-height: 100vh">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-12 col-md-10">
        <div
          class="card bg-dark text-white border-0 shadow-lg rounded-4 p-0 d-flex flex-lg-row"
        >
          <!-- Left: Image Preview -->
          <div
            class="col-lg-6 p-4 d-flex align-items-center justify-content-center border-end"
          >
            <div id="imagePreviewContainer" class="w-100 text-center">
              <img
                id="imagePreview"
                class="img-fluid rounded-3"
                style="height: 600px; object-fit: cover"
                src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
                alt="Image Preview"
              />
            </div>
          </div>

          <!-- Right: Upload Form -->
          <div class="col-lg-6 p-4">
            <h4 class="text-center mb-4 fw-semibold">Create New Post</h4>

            <form
              method="POST"
              action="/"
              enctype="multipart/form-data"
              novalidate
            >
              <!-- Image Upload -->
              <div class="mb-3">
                <label for="image" class="form-label text-white-50 small"
                  >Choose a photo</label
                >
                <input
                  type="file"
                  name="posts[image]"
                  class="form-control bg-dark text-white border-secondary"
                  id="imagePost"
                  accept="image/*"
                  required
                  multiple
                />
              </div>

              <!-- Caption -->
              <div class="mb-3">
                <label for="caption" class="form-label text-white-50 small"
                  >Caption</label
                >
                <textarea
                  class="form-control bg-dark text-white border-secondary"
                  id="caption"
                  name="posts[caption]"
                  placeholder="Write a caption..."
                  rows="3"
                  required
                ></textarea>
              </div>

              <!-- Location -->
              <div class="mb-4">
                <label for="location" class="form-label text-white-50 small"
                  >Location</label
                >
                <input
                  type="text"
                  class="form-control bg-dark text-white border-secondary"
                  id="location"
                  name="posts[location]"
                  placeholder="Add a location..."
                  required
                />
              </div>

              <!-- Submit -->
              <div class="d-grid">
                <button
                  type="submit"
                  class="btn btn-light rounded-pill fw-semibold py-2"
                >
                  Post
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
