<% layout("Layouts/Boilerplate") %>

<!-- Full Black Background -->
<div style="background-color: #000; min-height: 100vh; position: relative; margin-top: 0;">
  <!-- Overlay Container -->
  <div
    class="container text-white rounded-4 p-4"
    style="
      max-width: 900px;
      background-color: rgba(18, 18, 18, 0.9);
      backdrop-filter: blur(10px);
      margin: 50px auto;
      box-shadow: 0 0 30px rgba(255, 255, 255, 0.05);
    "
  >
    <!-- Profile Header -->
    <div class="d-flex align-items-center gap-5 mb-4">
      <!-- Profile Image -->
      <div
        class="rounded-circle overflow-hidden bg-secondary"
        style="width: 120px; height: 120px"
      >
        <img
          src="/images/profile-placeholder.jpg"
          alt="Profile"
          style="width: 100%; height: 100%; object-fit: cover"
        />
      </div>

      <!-- User Info -->
      <div>
        <div class="d-flex align-items-center gap-3 mb-2">
          <h4 class="mb-0">username_here</h4>
          <a href="/editProfile" class="btn btn-outline-light btn-sm">
            Edit Profile
          </a>
        </div>

        <!-- Stats -->
        <div class="d-flex gap-4">
          <span><strong>12</strong> posts</span>
          <span><strong>100</strong> followers</span>
          <span><strong>150</strong> following</span>
        </div>

        <!-- Bio -->
        <div class="mt-2">
          <p class="mb-0 fw-semibold">Full Name Here</p>
          <p class="mb-0 text-light">This is a short bio about the user.</p>
        </div>
      </div>
    </div>

    <hr class="border-light" />

    <!-- Post Grid -->
    <div class="row g-2">
      <div class="col-4">
        <a href="#">
          <img
            src="/images/post1.jpg"
            class="img-fluid rounded"
            style="height: 250px; object-fit: cover"
          />
        </a>
      </div>
      <div class="col-4">
        <a href="#">
          <img
            src="/images/post2.jpg"
            class="img-fluid rounded"
            style="height: 250px; object-fit: cover"
          />
        </a>
      </div>
      <div class="col-4">
        <a href="#">
          <img
            src="/images/post3.jpg"
            class="img-fluid rounded"
            style="height: 250px; object-fit: cover"
          />
        </a>
      </div>
    </div>
  </div>
</div>
