<% layout("Layouts/Boilerplate") %>

<div style="width: 100%; background-color: #000000; min-height: 100vh">
  <div class="container py-4" style="max-width: 500px">
    <% if (allPosts.length === 0) { %>
    <div class="text-white text-center mt-5">
      <h5>No posts found.</h5>
    </div>
    <% } else { %> <% for (let post of allPosts) { %> <%-
    include('../partials/postCard', { post: post, currUser: currUser }) %> <%-
    include('../partials/commentModal', { post: post }) %>
    <hr class="my-4" style="border-color: #ffffff; opacity: 0.3" />
    <% } %> <% } %>
  </div>
</div>
